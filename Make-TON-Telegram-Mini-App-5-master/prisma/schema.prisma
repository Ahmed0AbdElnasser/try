datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId     Int      @unique
  username        String?
  firstName      String?
  lastName       String?
  points         Int      @default(0)
  invitedCount   Int      @default(0) // عدد الأشخاص المدعوين
  inviteLink     String?  // رابط الدعوة الفريد
  pointsRequired  Int      @default(10) // عدد النقاط المطلوبة للسحب، يمكنك تعديله حسب الحاجة
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
